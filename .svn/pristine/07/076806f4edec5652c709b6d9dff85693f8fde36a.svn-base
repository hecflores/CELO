<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Bootstrap.php" colors="true" stderr="true">
    <testsuites>
        <testsuite name="Administrator Test">
            <directory>../module/Administrator/test</directory>
        </testsuite>
        <testsuite name="Application Test">
            <directory>../module/Application/test</directory>
        </testsuite>
        <testsuite name="Student Test">
            <directory>../module/Student/test</directory>
        </testsuite>
        <testsuite name="Instructor Test">
            <directory>../module/Instructor/test</directory>
        </testsuite>
        <testsuite name="TA Test">
            <directory>../module/TA/test</directory>
        </testsuite>
        <testsuite name="Files Test">
            <directory>../module/Files/test</directory>
        </testsuite>
        <testsuite name="Questions Test">
            <directory>../module/TA/test</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html"
             target="D:/wamp/www/CELO/build/coverage/html"
             charset="UTF-8"
             highlight="false"
             lowUpperBound="35"
             highLowerBound="70"/>

    </logging>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true" processUncoveredFilesFromWhitelist="true" >
            <directory suffix=".php">D:/wamp/www/CELO/module/*/src</directory>
        </whitelist>
    </filter>
</phpunit>