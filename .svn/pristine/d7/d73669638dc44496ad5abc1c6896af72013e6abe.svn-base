namespace TA\Controller;

use Application\Info;
use Application\Roles;
use Zend\Mvc\Application;
use Zend\Mvc\Controller\AbstractActionController;
use Zend\View\Model\ViewModel;
use Zend\Mvc\MvcEvent;
use Zend\View\View;

class IndexController extends AbstractActionController
{

    public function onDispatch(MvcEvent $e)
    {

        $navigation=new ViewModel();
        $navigation->setTemplate("layout/navigation");

        $banner=new ViewModel();
        $banner->setTemplate("layout/banner");

        $e->getViewModel()->addChild($navigation,"navigation");
        //e->getViewModel()->setTemplate("visitors/layout");
        $parent=parent::onDispatch($e); // TODO: Change the autogenerated stub


        /*******************************************************************/
        return $parent;
    }

    public function indexAction()
    {
        $view=new ViewModel();
        $view->setTemplate('user/home');

        return $view;
    }

    public function loginAction()
    {
        if (!$this->getRequest()->isPost()) {
            $view = new ViewModel();
            $view->setVariable("url", "ta/login");
            $view->setTemplate("user/login");
            return $view;
        }

        /*******************************************************************/
        $UserName = $this->params()->fromPost("userName");
        $Password = $this->params()->fromPost("password");

        if (($userSession = Info::LoginService()->SignIn($UserName, $Password, "TA")) != null) {
            $this->redirect()->toRoute("ta");
            return;
        }

        $view = new ViewModel();
        $view->setVariable("error", "User Name and Password did not match");
        $view->setVariable("url", "ta/login");
        $view->setTemplate("user/login");
        return $view;

    }
    public function logoutAction()
    {
        Info::LoginService()->SignOut();

        $this->redirect()->toRoute("home");







    }

}
